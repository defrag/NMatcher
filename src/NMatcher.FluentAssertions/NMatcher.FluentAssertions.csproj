<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Description>NMatcher is a simple library that eases tests (mostly with json). Package
        includes the FluentAssertions extension to ease the testing.</Description>
        <PackageReadmeFile>README.FluentAssertions.md</PackageReadmeFile>
        <PackageProjectUrl>https://github.com/defrag/NMatcher</PackageProjectUrl>
        <PackageTags>json;testing;matching;api</PackageTags>
        <PackageLicenseUrl>https://github.com/defrag/NMatcher/blob/master/LICENSE</PackageLicenseUrl>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="FluentAssertions" Version="6.11.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\NMatcher\NMatcher.csproj" />
      <None Include="..\..\README.FluentAssertions.md" Pack="true" PackagePath="$(PackageReadmeFile)"/>
    </ItemGroup>

</Project>
